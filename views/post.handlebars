<div class="text row mt-4">
  <div
    class="container basis-1/2 border border-solid border-lime-700 rounded p-5 m-5"
  
  >
    <div class="bg-lime-200 px-3 py-2">
      <h2
        class="postTitle text-center text-xl font-bold p-5 px-4 py-3 block"
      >{{title}}
      </h2>

      <p class="newPost text-right">
        Created by:
        {{user.username}}
      </p>
    </div>

    <div class="col-md-6 px-6 py-6">
      <p class="postDesc text-center">
        {{description}}
      </p>
    </div>
  </div>

</div>

<div
  class="container basis-1/2 border border-solid border-lime-700 rounded p-5 m-5"
>
  {{#if logged_in}}

    <form class="new-comment-form mb-5"
      id={{post_id}}
    >
      <div class="form-group mb-5">
        <input
          class="form-input form-control block w-full px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none"
          type="text"
          id="comment_description"
          name="comment-body"
          placeholder="Add comment here"
        />
      </div>

      <div class="form-group">
        <button
          type="submit"
          class="btn bg-lime-500 hover:bg-lime-700 text-white font-bold py-2 px-4 rounded btn btn-primary"
        >Add Comment</button>
      </div>

    </form>

  {{/if}}
</div>

  <div class="commentData">
    <h2 class="text-center text-xl font-bold p-5 px-4 py-3 block">Comments</h2>
    {{#each comments as |comment|}}
    <div class="newComment basis-1/2 border border-solid border-lime-700 rounded p-5 m-5">
      <p class="comment_description text-center" id="comment_description"
      >{{comment.description}}</p>
      <p class="comment-user text-right">posted by: {{user.username}} on  {{format_date comment.date_created}}
    </div>
    {{/each}}
     
  </div>


<script src="/js/comments.js"></script>